@page "/offence-types"
@inject IOffenceTypeManager _offenceTypeManager;

<HeroTitle Title="Offence Type" Description="Manage Offence Type Detail" />
<MudTable Items="@offenceTypes" Hover="true" Striped="true" Filter="new Func<OffenceTypeDto,bool>(FilterFunc1)" @bind-SelectedItem="selectedItem1">
    <ToolBarContent>
        <MudHidden Breakpoint="Breakpoint.Xs">

            <MudButton DisableElevation Variant="Variant.Filled"
                       OnClick="(()=> InvokeOffenceTypeDialog())"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.PersonAdd"
                       IconColor="Color.Surface">
                Add Offence Type
            </MudButton>

            <MudSpacer />
        </MudHidden>

        <MudTextField @bind-Value="searchString"
                      Immediate="true"
                      Placeholder="Search"
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium" />

    </ToolBarContent>
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Point</MudTh>
        <MudTh>Code</MudTh>
        <MudTh>Category</MudTh>
        <MudTh>Fine Amount</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="First Name">@context.Name</MudTd>
        <MudTd DataLabel="Last Name">@context.Point</MudTd>
        <MudTd DataLabel="Email">@context.Code</MudTd>
        <MudTd DataLabel="Phone Number">@context.Category</MudTd>
        <MudTd DataLabel="Date of Birth">@context.FineAmount</MudTd>
        <MudTd DataLabel="Actions" Style="text-align: right">

            <MudMenu Label="Actions" Variant="Variant.Filled" DisableElevation="true" EndIcon="@Icons.Filled.KeyboardArrowDown" IconColor="Color.Secondary" Direction="Direction.Left" OffsetX="true">
                <MudMenuItem @onclick="@(() => InvokeOffenceTypeDialog(context.Id))">Edit Offence Type</MudMenuItem>
                <MudMenuItem @onclick="@(() => DeleteOffenceType(context))">Delete</MudMenuItem>

            </MudMenu>

        </MudTd>



    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

